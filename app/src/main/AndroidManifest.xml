<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.miguel_lm.duckhunt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_duck_hunt"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_duck_hunt_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DuckHunt"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="n">
        <activity
            android:name=".ui.activities.RankingActivity"
            android:exported="true"
            android:label="@string/title_activity_ranking"
            android:theme="@style/Theme.DuckHunt.Ranking" />

        <activity
            android:name=".ui.activities.GameActivity"
            android:exported="true"
            android:theme="@style/Theme.DuckHunt.Game" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.DuckHunt.red" />

        <activity
            android:name=".ui.activities.RegistrationActivity"
            android:exported="true"
            android:theme="@style/Theme.DuckHunt.red" />

        <activity
            android:name=".ui.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.DuckHunt.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>